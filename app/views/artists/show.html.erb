<br/>

<center>
  <h1 class="page-header"><%= @artist.name %></h1>
  <p> Top Ten Songs By <%= @artist.name %> </p>
</center>

<br/>


<ol>
  <% @artist.top_tracks('US').each do |track| %>
    <li class="form"><%= track.name%> 
      <form class="row float-right" id="playlists" action="/playlists/add_track" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
        <select name="playlist_id">
          <% @playlists.each do |playlist|%>
            <option value="<%= playlist.id %>"><%= playlist.name%></option>
          <% end %>
        </select>
        <input type="hidden" name="track_id" value="<%= track.id %>" />
      </form>
      <script type="text/javascript">
        $(function() {
          $('form#playlists').find('select').on('click', function () {
            $('form#playlists').submit();
          });
        });
      </script>
     </li> 
  <% end %>
 
</ol>




